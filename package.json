{
	"name":"tedx",
	"version":"0.0.1",
	"fullName":"TEDx events",
	"description":"Theme for TEDx events",
	"keywords": [
       "tedx",
       "events",
       "video",
       "ted"
   ],
	"joshfire":{
		"images":{
			"screenshots": {
				"mobile":["http://i.imgur.com/G66zW.png","http://i.imgur.com/BjN4O.png","http://i.imgur.com/4mdm8.png"]
			},
			"graphics":{
				"*":{
					"small":"http://i.imgur.com/G8aGG.png",
					"big":"http://i.imgur.com/cAniH.png"
				},
				"mobile":"http://i.imgur.com/rphpo.png",
				"tablet":"http://i.imgur.com/44JIF.png",
				"desktop":"http://i.imgur.com/F2m22.png",
				"tv":"http://i.imgur.com/eVpIc.png"
			}
		},
		"devices":[
			{
			  "devices":["phone","tablet"],
				"startfile":"mobileapp/index.ipad.html"
			},
			{
			  "devices":"tv",
				"startfile":"tvapp/index.html"
			}
		],
		"datasources":{
			"main":{
				"title":"Videos",
				"description":"Videos for each event"
			},
			"news":{
				"title":"News feed"
			}
		},
		"options":{
			"schema":{
				"tedxlocation":{
					"type":"string",
					"title":"Name of the event",
					"required":true
				},
				"abouthtml":{
					"type":"string"
				}
			},
			"form":[
				{
					"key":"tedxlocation",
					"prepend":"TEDx"
				},
				"datasources.main",
				"datasources.news",
				{
					"key":"abouthtml",
					"type":"textarea"
				}
			]
		}
	}
}